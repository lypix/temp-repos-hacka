@page "/"
@using SurveyApp.Services

<PageTitle>NPS Intelligence</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">
                <i class="fas fa-brain text-primary"></i>
                NPS Intelligence
            </h1>
            <p class="lead mb-4">
                Intelligente Kundenfeedback-Analyse mit Azure OpenAI
            </p>
            
            <div class="row mt-5">
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-poll fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">NPS-Umfragen</h5>
                            <p class="card-text">Automatisierte Erfassung von Kundenfeedback basierend auf abgeschlossenen Tickets.</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-robot fa-3x text-success mb-3"></i>
                            <h5 class="card-title">KI-Analyse</h5>
                            <p class="card-text">Azure OpenAI generiert passende Folgefragen und analysiert Sentiment.</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                            <h5 class="card-title">Insights</h5>
                            <p class="card-text">Detaillierte Dashboards und Trends für datengetriebene Entscheidungen.</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-5">
                <p class="text-muted">
                    Powered by Azure OpenAI • .NET 9 • Blazor Server
                </p>
            </div>
        </div>
    </div>
</div>